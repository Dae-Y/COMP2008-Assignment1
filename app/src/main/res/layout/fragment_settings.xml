<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/gameBoardChangeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Game Board Size"
            android:textAppearance="@style/CustomMainButtonText"
            android:background="@drawable/rectangular_button" />
        <FrameLayout
            android:id="@+id/gameBoardFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/changeGameModeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change game mode"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/CustomMainButtonText"
            android:background="@drawable/rectangular_button"/>
        <FrameLayout
            android:id="@+id/gameModeFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <Button
            android:id="@+id/changePlayerProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Player Profile"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/CustomMainButtonText"
            android:background="@drawable/rectangular_button"/>
        <FrameLayout
            android:id="@+id/playerProfileFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp">
        <Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Back" />
    </LinearLayout>
</FrameLayout>